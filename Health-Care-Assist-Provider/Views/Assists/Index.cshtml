@model IEnumerable<Health_Care_Assist_Provider.Models.Assist>

@{
    ViewData["Title"] = "Index";
}

<h1>Assists</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.LabelForModel("Patient Full Name")
            </th>
            <th>
                @Html.LabelForModel("Sponsor Full Name")
            </th>
            <th>
                @Html.LabelForModel("Doctor Full Name")
            </th>
            <th>
                @Html.LabelForModel("Diagnosis/Specialty")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment.DateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-controller="Assists" asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis.Patient.Person.FirstName)
                @Html.DisplayFor(modelItem => item.Diagnosis.Patient.Person.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sponsor.Person.FirstName)
                @Html.DisplayFor(modelItem => item.Sponsor.Person.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.Doctor.Person.FirstName)
                @Html.DisplayFor(modelItem => item.Appointment.Doctor.Person.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis.Specialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.DateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
